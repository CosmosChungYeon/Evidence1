{
    "version": "2.0.0",
    "tasks": [
    
        {
            "type": "shell",
            "label": "gcc.exe build active file",
            "command": "gcc",
            "args": [
                "-g",
                "${fileDirname}/test.c",
                "${fileDirname}/array_func.c",
                "${fileDirname}/rand.c",
                "${fileDirname}/basic_func.c",
                "${fileDirname}/main.c",
                "-o",
                "${fileDirname}/main.exe"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Run",
            "command": "${fileDirname}/main.exe",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "C:\\MinGW\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/test.c",
                "${fileDirname}/array_func.c",
                "${fileDirname}/rand.c",
                "${fileDirname}/basic_func.c",
                "${fileDirname}/main.c",
                "-o",
                "${fileDirname}\\main.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}